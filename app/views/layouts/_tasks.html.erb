<ul class="dropdown-menu title-caret dropdown-lg" role="menu">
  <% if @tasks.count == 0 -%>
    <li>
      <p class="drop-title">There are no tasks !</p>
    </li>
  <% else %>
    <li>
      <p class="drop-title">There are <%= @tasks.count %> tasks !</p>
    </li>
    <li class="dropdown-menu-list slimscroll tasks">
        <ul class="list-unstyled">
          <% @tasks.each do |task| %>
            <li>
              <%= link_to policy_path(Policy.find_by_number(task.name)) do %>
                <!--<div class="task-icon badge badge-success">
                  <i class="fa fa-archive"></i>
                </div>-->
                <span style="font-size:10px;" class="badge badge-roundless badge-default pull-right"><%= time_ago_in_words(task.created_at) %></span>
                <p style="font-size:10px;" class="task-details"><%= "#{task.name} is now #{task.status}" %></p>
              <% end %>
            </li>
          <% end %>
        </ul>
    </li>
  <% end %>
</ul>
