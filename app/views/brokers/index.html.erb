<%# Brokers Index %>
<%= content_for :head do %>
  <%= stylesheet_link_tag 'datatables/css/jquery.datatables.css', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'datatables/css/jquery.datatables_themeroller.css', 'data-turbolinks-track' => true %>
<% end %>


    <div class="page-inner">
      <div class="page-breadcrumb">
        <ol class="breadcrumb container">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Brokers", "#", class: 'active' %></li>
        </ol>
      </div>
      <div class="page-title">
        <div class="container">
          <h3>Policies</h3>
        </div>
      </div>
      <div id="main-wrapper" class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="panel panel-white">
              <div class="panel-heading clearfix">
                <h4 class="panel-title">Policy Database</h4>
              </div>
              <div class="panel-body">
                <div class="table-responsive">
                  <table id="example" class="display table dataTable" style="width: 100%; cellspacing: 0;">
                    <thead>
                      <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Contact Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                      </tr>
                    </thead>
                    <tfoot>
                      <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Contact Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                      </tr>
                    </tfoot>
                    <tbody>
                      <% @brokers.each do |broker| %>
                        <tr>
                          <td><%= broker.code %></td>
                          <td><%= broker.name %></td>
                          <td><%= broker.contact_name %></td>
                          <td><%= broker.email %></td>
                          <td><%= broker.phone %></td>
                          <td>
                            <%= broker.street %>
                            <br />
                            <%= broker.city + ", " + broker.state + ". " + broker.zip %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                    <%- if false %>
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>DBA</th>
                        <th>Contact Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Commission</th>
                        <th>Agreement Sent</th>
                        <th>Agreement Complete</th>
                        <th>Pac Risk Fee Schedule</th>
                        <th>Target Premium</th>
                        <th>Address</th>
                        <th>Notes</th>
                      </tr>
                    </thead>
                    <tfoot>
                      <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Contact Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                      </tr>
                    </tfoot>
                    <tbody>
                      <% @brokers.each do |broker| %>
                        <tr>
                            <td><%= broker.code %></td>
                            <td><%= broker.name %></td>
                            <td><%= broker.contact_name %></td>
                            <td><%= broker.email %></td>
                            <td><%= broker.phone %></td>
                            <td>
                              <%= broker.street %>
                              <br />
                              <%= broker.city + ", " + broker.state + ". " + broker.zip %>
                            </td>
                        </tr>
                      <% end %>
                    </tbody>
                    <% end %>
                  </table>
                </div>
              </div>
            </div>

          </div>
        </div><!-- Row -->
      </div><!-- Main Wrapper -->

<!-- Javascripts -->
<%= content_for :js_includes do %>
  <%= javascript_include_tag 'moment/moment.js', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'datatables/js/jquery.datatables.min.js', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'pages/table-data.js', 'data-turbolinks-track' => true %>
<% end %>
